generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// NextAuth Models
model User {
  id            String          @id @default(cuid())
  name          String?
  email         String?         @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  
  // Custom Relations
  watchHistory  WatchHistory[]
  readHistory   ReadHistory[]
  watchlist     Watchlist[]
  savedLibrary  SavedLibrary[]

  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?
  access_token       String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Anime & Manga Models

enum ContentStatus {
  WATCHING
  COMPLETED
  PLAN_TO_WATCH
  DROPPED
  READING
  PLAN_TO_READ
}

model WatchHistory {
  id            String   @id @default(cuid())
  userId        String
  animeId       String   // ID from external API (e.g., AniList ID)
  episodeNumber Int
  progress      Int      // Timeline progress (seconds) or percentage
  image         String?  // Snapshot or poster
  title         String?  // Title cache
  
  updatedAt     DateTime @updatedAt
  
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, animeId])
}

model ReadHistory {
  id            String   @id @default(cuid())
  userId        String
  mangaId       String   // External ID
  chapterId     String?  // Specific chapter ID
  chapterNumber Float?   // Chapter number (float for .5 chapters)
  page          Int?     // Last read page
  image         String?
  title         String?

  updatedAt     DateTime @updatedAt
  
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, mangaId])
}

model Watchlist {
  id        String        @id @default(cuid())
  userId    String
  animeId   String
  image     String?
  title     String?
  status    ContentStatus @default(PLAN_TO_WATCH)
  
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt

  user      User          @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, animeId])
}

model SavedLibrary {
  id        String        @id @default(cuid())
  userId    String
  mangaId   String
  image     String?
  title     String?
  status    ContentStatus @default(PLAN_TO_READ)
  
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt

  user      User          @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, mangaId])
}
